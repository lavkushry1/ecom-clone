{
  "name": "flipkart-clone-functions",
  "description": "Cloud Functions for Flipkart Clone E-commerce",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0",
    "qrcode": "^1.5.3",
    "nodemailer": "^6.9.0",
    "twilio": "^4.19.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/qrcode": "^1.5.5",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.3.0",
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
